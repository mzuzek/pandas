{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // TODO: update all packages:
        // pip --disable-pip-version-check list --outdated --format=json \
        //  | python -c "import json, sys; print('\n'.join([x['name'] for x in json.load(sys.stdin)]))" \
        //  | xargs -n1 pip install -U
        // @ for pip < v22.3: pip list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U
        // @ for OLD pip: pip freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs -n1 pip install -U
        // see:
        //    https://stackoverflow.com/questions/2720014/how-to-upgrade-all-python-packages-with-pip
        //    https://www.activestate.com/resources/quick-reads/how-to-update-all-python-packages/
        {
            "label": "Build Pandas",
            "icon": {
                "id": "gather"
            },
            "type": "shell",
            "command": ".venv\\Scripts\\activate \
                && python -m pip install \
                    -ve . --no-build-isolation \
                    --config-settings editable-verbose=true",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "pre-commit: run HEAVY checks",
            "type": "shell",
            "icon": {
                "id": "output-view-icon"
            },
            // TODO: mypy skips files until called explicitly like:
            //       pre-commit run mypy \
            //              --show-diff-on-failure --color=always --verbose --hook-stage manual \
            //              --files pandas\io\excel\_odfreader.py
            "command": ".venv\\Scripts\\activate \
                    && pre-commit run --hook-stage manual --all-files",
            "problemMatcher": []
        }
    ]
}
